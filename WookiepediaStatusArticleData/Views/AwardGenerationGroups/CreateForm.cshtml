@model WookiepediaStatusArticleData.Models.Awards.AwardGenerationGroupForm;

@{
    ViewData["Title"] = "Generate Awards";
    Layout = "_AdminLayout";
}

@section MainTitle 
{
    <h1>Generate Awards</h1>
}

<section>
    <form asp-controller="AwardGenerationGroups" asp-action="Create">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" required="required" />
        <span asp-validation-for="Name"></span>

        <label asp-for="StartedAt">Started At</label>
        <input type="date" asp-for="StartedAt" required="required" />
        <span asp-validation-for="StartedAt"></span>

        <label asp-for="EndedAt">Ended At</label>
        <input type="date" asp-for="EndedAt" required="required" />
        <span asp-validation-for="EndedAt"></span>

        <br />
        <div class="submit-buttons">
            <a asp-controller="AwardGenerationGroups" asp-action="Index">
                <em>Cancel</em>
            </a>
            <button type="submit">Submit</button>
        </div>
    </form>
</section>