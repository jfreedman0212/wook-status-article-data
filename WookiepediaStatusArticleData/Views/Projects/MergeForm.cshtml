@model WookiepediaStatusArticleData.Models.Projects.MergeProjectForm;

@{
    ViewData["Title"] = "Merge Projects";
}

@section PageHeader
{
    <h1>Merge Projects</h1>
    <p>
        If there are any duplicate WookieeProjects with different names,
        use this tool to merge them together.
    </p>
}

@section Navigation
{
    <nav>
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Projects" asp-action="Index">Projects</a></li>
            <li><a asp-controller="Nominators" asp-action="Index">Nominators</a></li>
            <li><a asp-controller="Nominations" asp-action="Index">Nominations</a></li>
            <li><a asp-controller="AwardGenerationGroups" asp-action="Index">Awards</a></li>
            <li><a asp-controller="Account" asp-action="Logout">Log Out</a></li>
        </ul>
    </nav>
}

<section>
    <form asp-controller="Projects" asp-action="Merge">
        <label asp-for="@Model.FromProjectId">From</label>
        <small>This project will be deleted and all its data (i.e. nominations) moved over. This includes its change history.</small>
        <select asp-for="@Model.FromProjectId" asp-items="@Model.AllProjects" required>
            <option value="">-- Select a WookieeProject --</option>
        </select>
        <span asp-validation-for="@Model.FromProjectId"></span>

        <br />
        <label asp-for="@Model.ToProjectId">To</label>
        <select asp-for="@Model.ToProjectId" asp-items="@Model.AllProjects" required>
            <option value="">-- Select a WookieeProject --</option>
        </select>
        <span asp-validation-for="@Model.ToProjectId"></span>
        <br />
        <input type="submit" value="Merge" />
    </form>
</section>