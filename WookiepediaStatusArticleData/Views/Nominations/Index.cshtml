@model WookiepediaStatusArticleData.Models.Nominations.NominationListViewModel;

@{
    ViewData["Title"] = "Nominations";
    Layout = "_AdminLayout";
}

@section MainTitle 
{
    <h1>Manage Nominations</h1>
}

@section Links
{
    <a asp-controller="Nominations" asp-action="UploadForm">
        Import from CSV
    </a>
}

<section>
    <partial name="_FilterForm" model="@Model.Query" />
</section>

<section>
    <p><strong>Total matching nominations:</strong> @(((int)ViewBag.TotalMatchingCount).ToString("N0"))</p>
    <table>
        <thead>
        <tr>
            <th>Article Name</th>
            <th>Nominators</th>
            <th>Outcome</th>
            <th>Started At</th>
            <th>Ended At</th>
            <th></th>
        </tr>
        </thead>
        <tbody id="nominations-table">
        <partial name="_TableRows" model="@Model"/>
        </tbody>
    </table>
</section>