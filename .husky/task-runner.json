{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
     {
       "name": "dotnet-format-staged-files",
       "group": "pre-commit-tasks",
       "command": "dotnet",
       "args": ["format", "WookiepediaStatusArticleData", "--verify-no-changes", "${staged}"],
       "include": ["**/*.cs"]
     },
    {
       "name": "dotnet-format-staged-files",
       "group": "pre-commit-tasks",
       "command": "dotnet",
       "args": ["format", "WookiepediaStatusArticleData.Tests", "--verify-no-changes", "${staged}"],
       "include": ["**/*.cs"]
     }
   ]
}
